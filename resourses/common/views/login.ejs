<!DOCTYPE html>
<html lang="zh_ch">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/pictures/favicon.ico">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <style type="text/css">
        html,
        body,
        #container,
        #row {
            height: 100%;
        }

        .alert {
            position: fixed;
            z-index: 2000;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
    <title>登陆</title>
</head>

<body>
    <!--将登陆信息提交到/login-->
    <div class="container" id="container">
        <div class="row align-items-center justify-content-center" id="row">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4">
                <form action="" method="POST">
                    <div class="form-group form-row">
                        <label class="col-3 col-form-label" for="account">账号：</label>
                        <input class="form-control col-9" type="number" name="account" id="account"
                            placeholder="Your Account" required>
                    </div>
                    <div class="form-group form-row">
                        <label class="col-3 col-form-label" for="password">密码：</label>
                        <input class="form-control col-9" type="password" name="password" id="password"
                            placeholder="Your Password" required>
                    </div>

                    <div class="form-group form-row justify-content-around">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" name="identity" value="student" id="identity-s" class="custom-control-input"
                                checked>
                            <label for="identity-s" class="custom-control-label">Student</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" name="identity" value="teacher" id="identity-t"
                                class="custom-control-input">
                            <label for="identity-t" class="custom-control-label">Teacher</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" name="identity" value="dean" id="identity-d" class="custom-control-input">
                            <label for="identity-d" class="custom-control-label">Dean</label>
                        </div>
                    </div>
                    <div class="form-row justify-content-between align-items-center mb-3">
                        <a href="/password">忘记密码</a>
                        <button class="btn btn-primary w-50" type="submit">登陆</button>
                    </div>
                </form>
                <%- include('./alert') %>
            </div>
        </div>

    </div>

    <script src="/bootstrap/others/jquery-3.4.0.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            let $form = $(document.forms[0]);
            $form.submit((e) => {
                e.preventDefault();
                $.post('/login', $form.serialize()).done((data, textStatus, xhr) => {
                    window.location.href = xhr.getResponseHeader('Location');
                }).fail(xhr => {
                    $('.alert>span').text(xhr.responseText);
                    $('.alert-modal').modal({
                        backdrop: 'static',
                        keyboard: false
                    });
                });
            });
        })();
    </script>
</body>

</html>