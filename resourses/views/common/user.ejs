                data-toggle="dropdown">
                <img src=<%= '../pictures/'+user.profile %> class="float-left rounded-circle" alt="profile"
                    width="48px">
                <div>
                    <div class="h5 my-0"><%= user.name %></div>
                    <% const identity={'student':'学生','teacher':'教师','dean':'系主任'}; %>
