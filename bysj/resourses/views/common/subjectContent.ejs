<% let subject=data[0][0],teacher=data[1][0]; %>
<header class="text-center border-bottom border-secondary mb-3">
    <h3 class="mb-0"><%= subject.title %></h3>
</header>
<div class="mb-3">
    <h5 class="text-primary">课题信息</h5>
    <table class="table text-center table-fixed table-bordered">
        <tbody>
            <tr>
                <th>题目类型</th>
                <td><%= subject.type %></td>
                <th>题目来源</th>
                <td><%= subject.source %></td>
            </tr>
            <tr>
                <th>题目难度</th>
                <td><%= subject.difficulty %></td>
                <th>题目份量</th>
                <td><%= subject.weight %></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="mb-3">
    <h5 class="text-primary">能力要求</h5>
    <table class="table text-center table-fixed table-bordered">
        <tbody>
            <tr>
                <th>解决问题综合能力</th>
                <th>实验能力</th>
                <th>绘图能力</th>
                <th>数据处理能力</th>
                <th>计算结果分析能力</th>
            </tr>
            <tr>
                <td><%= subject.ability.allRound %></td>
                <td><%= subject.ability.experiment %></td>
                <td><%= subject.ability.graphic %></td>
                <td><%= subject.ability.data %></td>
                <td><%= subject.ability.analysis %></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="row mb-3">
    <div class="col">
        <h5 class="text-primary">课题简介</h5>
        <pre class="p-3 border rounded"><%- subject.introduction||'未填写' _%></pre>
    </div>
    <div class="col">
        <h5 class="text-primary">学生要求</h5>
        <pre class="p-3 border rounded"><%- subject.requirement||'未填写' _%></pre>
    </div>
</div>
<div class="mb-3">
    <h5 class="text-primary">教师信息</h5>
    <table class="table text-center table-fixed table-bordered">
        <tbody>
            <tr>
                <th>姓名</th>
                <td><%= teacher.name %></td>
                <th>性别</th>
                <td><%= teacher.gender %></td>
            </tr>
            <tr>
                <th>工号</th>
                <td><%= teacher.teaNum %></td>
                <th>职称</th>
                <td><%= teacher.proTitle %></td>
            </tr>
            <tr>
                <th>方向</th>
                <td><%= teacher.group.substr(2) %></td>
                <th>研究领域</th>
                <td><%= teacher.field||'未填写' %></td>
            </tr>
            <tr>
                <th>办公地点</th>
                <td><%= teacher.office||'未填写' %></td>
                <th>联系邮箱</th>
                <td><%= teacher.email||'未填写' %></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="mb-3">
    <h5 class="text-primary">教师简介</h5>
    <pre class="p-3 border rounded"><%- teacher.resume||'未填写' _%></pre>
</div>

<div class="mb-3">
    <h5 class="text-primary">附件</h5>
    <div class="p-3 border rounded">
        <% if (subject.materials) { %>
        <a href="./file/download<%= '?id='+subject.id+'&filename='+subject.materials %>" class=""
            download><small><%= subject.materials %></small></a>
        </ul>
        <% } else { %>
        <p class="text-muted mb-0">暂无</p>
        <% } %>
    </div>
</div>
<div class="d-flex justify-content-around font-italic mb-3">
    <h4>发布时间：<%= subject.submitTime %></h4>
    <h4>最后修改：<%= subject.lastModifiedTime %></h4>
</div>